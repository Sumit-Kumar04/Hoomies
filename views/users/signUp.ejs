<%layout("/layouts/boilerplate")%>
<body>
    <div class="row-8">
        <h1 class="col-6 offset-2">SignUp on Hoomies</h1>
        <div class="col-6 offset-2">
            <form method="post" action="/signup" class="needs-validation"  novalidate>
        
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username"  class="form-control" required  >       <!--required-->
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter username</div>
            </div>
             <div class="mb-3">
                
                <label for="Email" class="form-label">Email</label>
                <input type="email" name="email"  class="form-control" required  >       <!--required-->
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter Email</div>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password"  class="form-control" required  >       <!--required-->
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter password!</div>
            </div>
            <button class="btn btn-success add-btn">SignUP</button>
            </form>
        </div>
    </div>
