<% if (success && success.length) { %>
<div class="alert alert-success alert-dismissible fade show col-10 col-md-6 offset-1 offset-md-3 mx-auto" role="alert">
  <i class="bi bi-check-circle-fill me-2"></i> <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error && error.length) { %>
<div class="alert alert-danger alert-dismissible fade show col-10 col-md-6 offset-1 offset-md-3 mx-auto" role="alert">
  <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
